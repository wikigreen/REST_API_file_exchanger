<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>REST API file exchanger</display-name>

  <servlet>
    <servlet-name>AccountServlet</servlet-name>
    <servlet-class>com.wikigreen.controller.AccountServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.wikigreen.controller.UserServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>FileServlet</servlet-name>
    <servlet-class>com.wikigreen.controller.FileServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>EventServlet</servlet-name>
    <servlet-class>com.wikigreen.controller.EventServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AccountServlet</servlet-name>
    <url-pattern>/account/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>FileServlet</servlet-name>
    <url-pattern>/file/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>EventServlet</servlet-name>
    <url-pattern>/event/*</url-pattern>
  </servlet-mapping>

</web-app>
